<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.work.artwork.dao.UserTestDao">

    <resultMap type="com.work.artwork.entity.UserTest" id="UserTestMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="set" column="set" jdbcType="OTHER"/>
        <result property="age" column="age" jdbcType="OTHER"/>
        <result property="status" column="status" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserTestMap">
        select
          user_id, name, set, age, status
        from maitao.user_test
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserTestMap">
        select
          user_id, name, set, age, status
        from maitao.user_test
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserTestMap">
        select
          user_id, name, set, age, status
        from maitao.user_test
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="set != null">
                and set = #{set}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into maitao.user_test(name, set, age, status)
        values (#{name}, #{set}, #{age}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update maitao.user_test
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="set != null">
                set = #{set},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from maitao.user_test where user_id = #{userId}
    </delete>

</mapper>